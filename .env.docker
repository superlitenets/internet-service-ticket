# Local Docker Development Environment
# Use this file when developing with Docker and local PostgreSQL

# Application
NODE_ENV=development
PORT=9000

# Database - Local PostgreSQL (Docker)
# This DATABASE_URL is configured to work with docker-compose services
DATABASE_URL=postgresql://netflow:secure_password@postgres:5432/netflow_db

# Database Configuration (for reference)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=netflow_db
DB_USER=netflow
DB_PASSWORD=secure_password

# JWT Authentication
JWT_SECRET=dev_jwt_secret_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRY=86400

# Email Configuration (optional for local development)
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=465
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS=noreply@netflow.local
MAIL_FROM_NAME="NetFlow ISP"

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=debug

# Session
SESSION_DRIVER=cookie
SESSION_LIFETIME=1440

# File Upload
MAX_UPLOAD_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,csv,xlsx,xls

# API Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_MINUTES=1

# Redis Cache
CACHE_DRIVER=redis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Multitenancy
MULTITENANCY_ENABLED=true
DEFAULT_TENANT_ID=1

# Notification
NOTIFICATION_EMAIL_ENABLED=false
NOTIFICATION_SMS_ENABLED=false

# External APIs (optional - add your credentials)
MIKROTIK_ENABLED=false
STRIPE_ENABLED=false
