{
  "name": "netflow/netflow-app",
  "description": "NetFlow - ISP Management System",
  "type": "project",
  "license": "MIT",
  "require": {
    "php": ">=8.1",
    "slim/slim": "^4.14",
    "slim/psr7": "^1.6",
    "psr/http-message": "^1.1",
    "psr/container": "^2.0",
    "psr/log": "^3.0",
    "monolog/monolog": "^3.5",
    "vlucas/phpdotenv": "^5.6",
    "firebase/php-jwt": "^6.9",
    "guzzlehttp/guzzle": "^7.7",
    "monolog/monolog": "^3.5",
    "ramsey/uuid": "^4.7",
    "php-curl-class/php-curl-class": "^9.15"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Database\\": "database/",
      "Core\\": "core/",
      "Helpers\\": "helpers/"
    }
  },
  "scripts": {
    "start": "php -S localhost:8000 -t public",
    "db:migrate": "php database/migrate.php",
    "test": "phpunit"
  }
}
