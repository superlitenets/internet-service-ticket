# NetFlow Configuration

# Application
APP_NAME="NetFlow ISP Management"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:3000
APP_TIMEZONE=UTC
NODE_ENV=development
PORT=9000

# Database (MySQL) - Use when running locally with Docker Compose
DATABASE_URL=mysql://netflow_user:secure_password@mysql:3306/netflow_db

# Or use these individual values
DB_HOST=mysql
DB_PORT=3306
DB_NAME=netflow_db
DB_USER=netflow_user
DB_PASSWORD=secure_password
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRY=86400

# Email Configuration
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=465
MAIL_USERNAME=your_username
MAIL_PASSWORD=your_password
MAIL_FROM_ADDRESS=noreply@netflow.com
MAIL_FROM_NAME="NetFlow ISP"

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=debug

# Session
SESSION_DRIVER=cookie
SESSION_LIFETIME=1440

# File Upload
MAX_UPLOAD_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,csv,xlsx,xls

# API Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_MINUTES=1

# Redis Cache (optional)
CACHE_DRIVER=file
REDIS_HOST=localhost
REDIS_PASSWORD=null
REDIS_PORT=6379

# Multitenancy
MULTITENANCY_ENABLED=true
DEFAULT_TENANT_ID=1

# Notification
NOTIFICATION_EMAIL_ENABLED=true
NOTIFICATION_SMS_ENABLED=false
SMS_GATEWAY=twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# External APIs
MIKROTIK_ENABLED=true
STRIPE_ENABLED=false
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
